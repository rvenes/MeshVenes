<Page
    x:Class="MeshtasticWin.Pages.SettingsModuleCannedMessagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Canned Messages Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Enabled"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="EnabledToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Send bell"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="SendBellToggle"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Messages"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="MessagesBox" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="80"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Rotary 1"/>
                <ToggleSwitch Grid.Row="3" Grid.Column="1" x:Name="RotaryToggle"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Up/Down 1"/>
                <ToggleSwitch Grid.Row="4" Grid.Column="1" x:Name="UpDownToggle"/>

                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Pin A"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="PinABox"/>

                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Pin B"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="PinBBox"/>

                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="Press pin"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="PinPressBox"/>

                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Clockwise event"/>
                <ComboBox Grid.Row="8" Grid.Column="1" x:Name="CwEventCombo"/>

                <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Text="Counter-clockwise event"/>
                <ComboBox Grid.Row="9" Grid.Column="1" x:Name="CcwEventCombo"/>
            </Grid>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Press event"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="PressEventCombo"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

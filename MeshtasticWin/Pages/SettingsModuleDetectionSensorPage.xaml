<Page
    x:Class="MeshtasticWin.Pages.SettingsModuleDetectionSensorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Detection Sensor Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Enabled"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="EnabledToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Send bell"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="SendBellToggle"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Name"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="NameBox"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Monitor pin"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="MonitorPinBox"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Trigger type"/>
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="TriggerCombo"/>

                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Minimum broadcast (s)"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="MinimumBroadcastBox"/>

                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="State broadcast (s)"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="StateBroadcastBox"/>
            </Grid>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Use pull-up"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="PullupToggle"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

<Page
    x:Class="MeshtasticWin.Pages.SettingsModuleSerialPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Serial Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Enabled"/><ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="EnabledToggle"/>
                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Echo"/><ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="EchoToggle"/>
                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Baud"/><ComboBox Grid.Row="2" Grid.Column="1" x:Name="BaudCombo"/>
                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Timeout"/><TextBox Grid.Row="3" Grid.Column="1" x:Name="TimeoutBox"/>
                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Mode"/><ComboBox Grid.Row="4" Grid.Column="1" x:Name="ModeCombo"/>
                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Receive data (RXD) GPIO pin"/><TextBox Grid.Row="5" Grid.Column="1" x:Name="RxdBox"/>
                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Transmit data (TXD) GPIO pin"/><TextBox Grid.Row="6" Grid.Column="1" x:Name="TxdBox"/>
                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="Override console serial port"/><ToggleSwitch Grid.Row="7" Grid.Column="1" x:Name="OverrideConsoleToggle"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

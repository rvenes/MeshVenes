<Page
    x:Class="MeshtasticWin.Pages.SettingsRadioLoRaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="900" HorizontalAlignment="Left">
            <TextBlock Text="LoRa" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>

            <Grid ColumnDefinitions="220,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Use preset"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="UsePresetToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Modem preset"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ModemPresetCombo"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Region"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="RegionCombo"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Bandwidth"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="BandwidthBox"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Spread factor"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="SpreadFactorBox"/>

                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Coding rate"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="CodingRateBox"/>

                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Frequency offset"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="FrequencyOffsetBox"/>

                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="Hop limit"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="HopLimitBox"/>

                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="TX enabled"/>
                <ToggleSwitch Grid.Row="8" Grid.Column="1" x:Name="TxEnabledToggle"/>

                <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Text="TX power (dBm)"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="TxPowerBox"/>

                <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Channel number"/>
                <TextBox Grid.Row="10" Grid.Column="1" x:Name="ChannelNumBox"/>

                <TextBlock Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" Text="Override duty cycle"/>
                <ToggleSwitch Grid.Row="11" Grid.Column="1" x:Name="OverrideDutyCycleToggle"/>

                <TextBlock Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" Text="SX126x RX boosted gain"/>
                <ToggleSwitch Grid.Row="12" Grid.Column="1" x:Name="RxBoostedGainToggle"/>

                <TextBlock Grid.Row="13" Grid.Column="0" VerticalAlignment="Center" Text="Override frequency"/>
                <TextBox Grid.Row="13" Grid.Column="1" x:Name="OverrideFrequencyBox"/>

                <TextBlock Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" Text="PA fan disabled"/>
                <ToggleSwitch Grid.Row="14" Grid.Column="1" x:Name="PaFanDisabledToggle"/>

                <TextBlock Grid.Row="15" Grid.Column="0" VerticalAlignment="Center" Text="Ignore MQTT"/>
                <ToggleSwitch Grid.Row="15" Grid.Column="1" x:Name="IgnoreMqttToggle"/>

                <TextBlock Grid.Row="16" Grid.Column="0" VerticalAlignment="Center" Text="Config OK to MQTT"/>
                <ToggleSwitch Grid.Row="16" Grid.Column="1" x:Name="ConfigOkToMqttToggle"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

<Page
    x:Class="MeshtasticWin.Pages.SettingsDeviceBluetoothPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Bluetooth Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="220,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Enabled"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="EnabledToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Pairing mode"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="ModeCombo"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Fixed PIN"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="FixedPinBox"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

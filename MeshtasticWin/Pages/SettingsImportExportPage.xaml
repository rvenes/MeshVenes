<Page
    x:Class="MeshtasticWin.Pages.SettingsImportExportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="1200" HorizontalAlignment="Left">
            <TextBlock Text="Import / Export" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Ready." Opacity="0.85" TextWrapping="Wrap"/>
            <TextBlock Opacity="0.85" TextWrapping="Wrap"
                       Text="Note: Export/import can take time, especially for remote admin targets. Fetching all categories uses significant mesh bandwidth. Select only the sections you actually need."/>

            <Grid ColumnDefinitions="180,420" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Selection preset"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="SelectionPresetCombo" Width="260" HorizontalAlignment="Left" SelectionChanged="SelectionPresetCombo_SelectionChanged"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Custom preset name"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="CustomPresetNameBox" Width="260" HorizontalAlignment="Left" PlaceholderText="example: team-radio-only"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Text="Notes"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="NotesBox" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Apply selection preset" Click="ApplySelectionPreset_Click"/>
                <Button Content="Save selection preset file" Click="SaveSelectionPresetFile_Click"/>
                <Button Content="Delete selected preset file" Click="DeleteSelectedSelectionPresetFile_Click"/>
                <Button Content="Reload presets" Click="ReloadPresets_Click"/>
            </StackPanel>

            <TextBlock Text="Sections to include / apply" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Select all" Click="SelectAllSections_Click"/>
                <Button Content="Select none" Click="SelectNoSections_Click"/>
            </StackPanel>
            <Grid ColumnDefinitions="360,360,360" ColumnSpacing="16">
                <StackPanel Grid.Column="0" Spacing="6">
                    <TextBlock Text="Radio Configuration" FontWeight="SemiBold"/>
                    <CheckBox x:Name="IncludeLoraCheck" Content="LoRa config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeChannelsCheck" Content="Channels" IsChecked="True"/>
                    <CheckBox x:Name="IncludeSecurityCheck" Content="Security config" IsChecked="True"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Spacing="6">
                    <TextBlock Text="Device Configuration" FontWeight="SemiBold"/>
                    <CheckBox x:Name="IncludeOwnerCheck" Content="User / owner" IsChecked="True"/>
                    <CheckBox x:Name="IncludeBluetoothCheck" Content="Bluetooth config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeDeviceCheck" Content="Device config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeDisplayCheck" Content="Display config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeNetworkCheck" Content="Network config" IsChecked="True"/>
                    <CheckBox x:Name="IncludePositionCheck" Content="Position config" IsChecked="True"/>
                    <CheckBox x:Name="IncludePowerCheck" Content="Power config" IsChecked="True"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Spacing="6">
                    <TextBlock Text="Module Configuration" FontWeight="SemiBold"/>
                    <CheckBox x:Name="IncludeCannedModuleCheck" Content="Canned messages config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeCannedMessagesTextCheck" Content="Canned messages text" IsChecked="True"/>
                    <CheckBox x:Name="IncludeDetectionSensorCheck" Content="Detection sensor config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeExternalNotificationCheck" Content="External notification config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeMqttCheck" Content="MQTT config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeRangeTestCheck" Content="Range test config" IsChecked="True"/>
                    <CheckBox x:Name="IncludePaxCounterCheck" Content="PAX counter config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeRingtoneTextCheck" Content="Ringtone text" IsChecked="True"/>
                    <CheckBox x:Name="IncludeSerialCheck" Content="Serial config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeStoreForwardCheck" Content="Store &amp; forward config" IsChecked="True"/>
                    <CheckBox x:Name="IncludeTelemetryCheck" Content="Telemetry config" IsChecked="True"/>
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Export selected to file" Click="ExportSelected_Click"/>
                <Button Content="Import from file to selected sections" Click="ImportSelected_Click"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>

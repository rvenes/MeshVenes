<Page
    x:Class="MeshtasticWin.Pages.SettingsModuleRingtonePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Ringtone Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Ringtone (RTTTL)"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="RingtoneBox" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="120"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

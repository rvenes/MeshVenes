<Page
    x:Class="MeshVenes.Pages.SettingsDeviceDevicePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Device Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="260,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Device role"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="RoleCombo"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Rebroadcast mode"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="RebroadcastCombo"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Node info broadcast interval (s)"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="NodeInfoSecsBox"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Double tap as button"/>
                <ToggleSwitch Grid.Row="3" Grid.Column="1" x:Name="DoubleTapToggle"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Triple click ad hoc ping"/>
                <ToggleSwitch Grid.Row="4" Grid.Column="1" x:Name="TripleClickToggle"/>

                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="LED heartbeat"/>
                <ToggleSwitch Grid.Row="5" Grid.Column="1" x:Name="LedHeartbeatToggle"/>

                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Time zone"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="TimezoneBox"/>

                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="Button GPIO"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="ButtonGpioBox"/>

                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Buzzer GPIO"/>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="BuzzerGpioBox"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reset NodeDB"
                        Click="ResetNodeDb_Click"
                        Background="#FFD45A5A"
                        Foreground="White"/>
                <Button Content="Factory Reset"
                        Click="FactoryReset_Click"
                        Background="#FFD45A5A"
                        Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

<Page
    x:Class="MeshVenes.Pages.SettingsDeviceNetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Network Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="260,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="WiFi enabled"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="WifiEnabledToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="SSID"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="WifiSsidBox"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Password"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="WifiPasswordBox"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="NTP server"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="NtpServerBox"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="UDP broadcast enabled"/>
                <ToggleSwitch Grid.Row="4" Grid.Column="1" x:Name="UdpBroadcastToggle"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

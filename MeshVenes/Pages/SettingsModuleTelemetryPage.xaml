<Page
    x:Class="MeshVenes.Pages.SettingsModuleTelemetryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Telemetry Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Broadcast device metrics"/><ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="DeviceTelemetryToggle"/>
                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Device update interval (s)"/><TextBox Grid.Row="1" Grid.Column="1" x:Name="DeviceUpdateIntervalBox"/>
                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Environment metrics enabled"/><ToggleSwitch Grid.Row="2" Grid.Column="1" x:Name="EnvironmentEnabledToggle"/>
                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Environment update interval (s)"/><TextBox Grid.Row="3" Grid.Column="1" x:Name="EnvironmentUpdateIntervalBox"/>
                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Environment screen enabled"/><ToggleSwitch Grid.Row="4" Grid.Column="1" x:Name="EnvironmentScreenToggle"/>
                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Display Fahrenheit"/><ToggleSwitch Grid.Row="5" Grid.Column="1" x:Name="FahrenheitToggle"/>
                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Air quality enabled"/><ToggleSwitch Grid.Row="6" Grid.Column="1" x:Name="AirQualityToggle"/>
                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="Air quality interval (s)"/><TextBox Grid.Row="7" Grid.Column="1" x:Name="AirQualityIntervalBox"/>
                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Power metrics enabled"/><ToggleSwitch Grid.Row="8" Grid.Column="1" x:Name="PowerEnabledToggle"/>
                <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Text="Power update interval (s)"/><TextBox Grid.Row="9" Grid.Column="1" x:Name="PowerUpdateIntervalBox"/>
                <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Power screen enabled"/><ToggleSwitch Grid.Row="10" Grid.Column="1" x:Name="PowerScreenToggle"/>
                <TextBlock Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" Text="Health metrics enabled"/><ToggleSwitch Grid.Row="11" Grid.Column="1" x:Name="HealthEnabledToggle"/>
            </Grid>

            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Health update interval (s)"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="HealthUpdateIntervalBox"/>
                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Health screen enabled"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="HealthScreenToggle"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

<Page
    x:Class="MeshVenes.Pages.SettingsDevicePowerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Power Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <TextBlock Text="App UI" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Show Power Metrics tab"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="ShowPowerMetricsTabToggle" Toggled="ShowPowerMetricsTabToggle_Toggled"/>
            </Grid>

            <TextBlock Text="Power" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Power saving"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="PowerSavingToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Shutdown on power loss"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="ShutdownOnPowerLossToggle"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Shutdown delay (s)"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="ShutdownAfterSecsBox"/>
            </Grid>

            <TextBlock Text="Battery" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="ADC override"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="AdcOverrideBox"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

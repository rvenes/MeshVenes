<Page
    x:Class="MeshVenes.Pages.SettingsDeviceDisplayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Display Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <Grid ColumnDefinitions="260,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Always point north"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="AlwaysNorthToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="12 hour clock"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="Clock12Toggle"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Bold heading"/>
                <ToggleSwitch Grid.Row="2" Grid.Column="1" x:Name="BoldHeadingToggle"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Display units"/>
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="UnitsCombo"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Screen on for (s)"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="ScreenOnSecsBox"/>

                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Carousel interval (s)"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="CarouselSecsBox"/>

                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Wake screen on tap/motion"/>
                <ToggleSwitch Grid.Row="6" Grid.Column="1" x:Name="WakeOnMotionToggle"/>

                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Text="Flip screen"/>
                <ToggleSwitch Grid.Row="7" Grid.Column="1" x:Name="FlipScreenToggle"/>

                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Display mode"/>
                <ComboBox Grid.Row="8" Grid.Column="1" x:Name="DisplayModeCombo"/>
            </Grid>

            <Grid ColumnDefinitions="260,360" RowSpacing="8" ColumnSpacing="12">
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="OLED type"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="OledTypeCombo"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

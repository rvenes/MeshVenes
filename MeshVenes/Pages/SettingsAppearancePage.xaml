<Page
    x:Class="MeshVenes.Pages.SettingsAppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Appearance" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock Text="Choose app theme override." Opacity="0.85"/>

            <Grid ColumnDefinitions="220,300" RowSpacing="8" ColumnSpacing="12">
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Theme"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ThemeCombo" SelectionChanged="ThemeCombo_SelectionChanged">
                    <ComboBoxItem Content="Follow Windows" Tag="System"/>
                    <ComboBoxItem Content="Light" Tag="Light"/>
                    <ComboBoxItem Content="Dark" Tag="Dark"/>
                    <ComboBoxItem Content="Dark Gray" Tag="DarkGray"/>
                </ComboBox>
            </Grid>

            <TextBlock
                TextWrapping="Wrap"
                Opacity="0.8"
                Text="Follow Windows uses your system light/dark setting. Light, Dark, and Dark Gray force app appearance."/>
        </StackPanel>
    </ScrollViewer>
</Page>

<Page
    x:Class="MeshVenes.Pages.SettingsDevicePositionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="12" MaxWidth="980" HorizontalAlignment="Left">
            <TextBlock Text="Position Config" FontSize="22" FontWeight="SemiBold"/>
            <TextBlock x:Name="StatusText" Text="Loading..." Opacity="0.85"/>
            <TextBlock x:Name="NodeText" Opacity="0.8"/>

            <TextBlock Text="Position packet" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Broadcast interval (s)"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="BroadcastIntervalBox"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Smart position"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="SmartPositionToggle"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Minimum interval (s)"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="MinimumIntervalBox"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Minimum distance (m)"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="MinimumDistanceBox"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="GPS mode"/>
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="GpsModeCombo"/>

                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Fixed position"/>
                <ToggleSwitch Grid.Row="5" Grid.Column="1" x:Name="FixedPositionToggle"/>
            </Grid>

            <TextBlock Text="Position flags" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Altitude"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="FlagAltitudeToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Number of satellites"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="FlagSatellitesToggle"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Sequence number"/>
                <ToggleSwitch Grid.Row="2" Grid.Column="1" x:Name="FlagSequenceToggle"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Timestamp"/>
                <ToggleSwitch Grid.Row="3" Grid.Column="1" x:Name="FlagTimestampToggle"/>

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Vehicle heading"/>
                <ToggleSwitch Grid.Row="4" Grid.Column="1" x:Name="FlagHeadingToggle"/>

                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Text="Vehicle speed"/>
                <ToggleSwitch Grid.Row="5" Grid.Column="1" x:Name="FlagSpeedToggle"/>
            </Grid>

            <TextBlock Text="Advanced position flags" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Altitude is mean sea level"/>
                <ToggleSwitch Grid.Row="0" Grid.Column="1" x:Name="FlagAltitudeMslToggle"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Altitude geoidal separation"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="1" x:Name="FlagGeoidalToggle"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Dilution of precision (DOP)"/>
                <ToggleSwitch Grid.Row="2" Grid.Column="1" x:Name="FlagDopToggle"/>

                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Use HDOP/VDOP instead of PDOP"/>
                <ToggleSwitch Grid.Row="3" Grid.Column="1" x:Name="FlagHvDopToggle"/>
            </Grid>

            <TextBlock Text="Advanced device GPS" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,0"/>
            <Grid ColumnDefinitions="280,360" RowSpacing="8" ColumnSpacing="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="GPS receive GPIO"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="GpsRxBox"/>

                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="GPS transmit GPIO"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="GpsTxBox"/>

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="GPS EN GPIO"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="GpsEnBox"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Reload" Click="Reload_Click"/>
                <Button Content="Save" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
